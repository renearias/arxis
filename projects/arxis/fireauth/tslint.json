{
  "extends": "../../../tslint.json",
  "rules": {
    "directive-selector": [true, "attribute", "arxis", "camelCase"],
    "component-selector": [true, "element", "arxis", "kebab-case"],
    "no-console": {
      "severity": "warning",
      "options": ["log", "debug", "info", "time", "timeEnd", "trace"]
    },
    "ordered-imports": [
      true,
      {
        "import-sources-order": "lowercase-last",
        "named-imports-order": "lowercase-last",
        "grouped-imports": true
      }
    ]
  }
}
